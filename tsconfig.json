{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "@routes/*": ["routes/*"],
      "@controllers/*": ["controllers/*"],
      "@schemas/*": ["schemas/*"],
      "@prompts/*": ["prompts/*"],
      "@services/*": ["services/*"],
      "@clients/*": ["clients/*"],
      "@config/*": ["config/*"]
    },
    "baseUrl": "src"
  },
  "include": ["src"]
}
